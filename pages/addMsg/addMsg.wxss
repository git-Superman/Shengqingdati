.addMsg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.addMsg_text {
  position: absolute;
  top: 38%;
  left: 0;
  width: 100%;
  text-align: center;
}

.addMsg_text text {
  display: block;
  font-size: 34rpx;
  color: #fff;
  width: 70%;
  margin: 0 auto;
}

.add_Msg {
  background: #fff;
  position: absolute;
  top: 51%;
  left: 50%;
  transform: translate(-50%, 0);
  border-radius: 18rpx;
  width: 650rpx;
  height: 500rpx;
  text-align: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.add_Msg image {
  position: absolute;
  top: -8%;
  left: 50%;
  transform: translate(-50%, 0);
  width: 326rpx;
  height: 82rpx;
}

.ipt_group {
  margin-top: 18%;
}

.ipt_group input {
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 30rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
  margin: 30rpx auto;
  text-align: left;
  font-size: 30rpx;
}

.ipt_group input::placeholder {
  color: #bdbdbd;
}

.addMsg_btn {
  width: 450rpx;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 36rpx;
  color: #fff;
  margin: 20rpx auto 0 auto;
}
