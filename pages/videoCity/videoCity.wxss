/* pages/videoCity/videoCity.wxss */
.borr8{border-radius: 8px;}
.navigation{position:fixed;top: 0;left: 0;width: 100%;z-index: 9999; height: 90rpx;align-items: center;display: flex;}
.navigation image{width:220rpx;margin-left: 15px;}

.content{position: fixed;top: 90rpx;left: 0;width: 100%;height: 100%;box-sizing: border-box;padding:0 40rpx;}
.title{color: #fff;font-size: 30rpx; background-color: #2f73e0; box-shadow:inset 0px -5px 0px #2c4db4,0 0 2px 1px #000;padding: 30rpx 25rpx 40rpx;margin: 50rpx 0; }

.list_box{font-size: 32rpx; height: 62%;color: #fff;background-color: #77a8f7; box-shadow:inset 0px -5px 0px #2b4cb3,0 0 2px 1px #000;padding: 20rpx 25rpx 0;}
.list_box .tit{font-weight: 600;margin-bottom: 15rpx;}
.list{background-color: #213a70;height: 90%;padding: 30rpx 38rpx 30rpx;box-sizing: border-box;}
.list .item{background-color: #77a8f7; box-shadow:inset 0px -5px 0px #2b4cb3,0 0 2px 1px #000;padding: 20rpx 0 35rpx;margin-bottom: 25rpx;}
.list .itemCurr{background-color: #ffbf13; box-shadow:inset 0px -5px 0px #bf7013,0 0 2px 1px #000;}

.tab{background-color: #1c7af9;color: #fff;display: flex;display: -webkit-flex;position: fixed;bottom: 0;left: 0;width: 100%;padding-top: 6rpx;padding-bottom: 4rpx;}
.tab_item{flex: 1;}
.tab_item image{width:54rpx;height:54rpx;vertical-align: middle;}
.tab_item .text{font-size: 20rpx;}








